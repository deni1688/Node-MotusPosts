<h1 class="page-title">Add Post</h1>
<div class="row">
  <div class="col s12 m12">
    <form action="/posts" method="post">
      {{#if error}}
      <p href="#" class="error red">{{error}}</p>
      {{/if}}
      <div class="input-field">
        <label>Title</label>
        <input type="text" name="title" required>
      </div>
      <div class="input-field">
        <select name="status">
          <option value="Public" selected>Public</option>
          <option value="Private">Private</option>
          <option value="Unpublished">Unpublished</option>
        </select>
        <label>Status</label>
      </div>
      <label>Allow Comments</label>
      <!-- Switch -->
      <div class="switch">
        <label>
          Off
          <input type="checkbox" name="allowComments" checked>
          <span class="lever"></span>
          On
        </label>
      </div>
      <div class="input-field">
        <h5>Your Post Content</h5>
        <textarea name="body" class="materialize-textarea validate" required></textarea>
      </div>

      <div class="input-field">
        <input type="submit" value="Submit" class="btn teal">
      </div>
    </form>
  </div>
</div>